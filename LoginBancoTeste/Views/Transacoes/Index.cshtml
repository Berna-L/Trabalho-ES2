@model LoginBancoTeste.Models.Cliente
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TransacoesLayout.cshtml";    
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="jumbotron">
            <p class="lead">Acesse sua conta conta realizando o login</p>
            <p>
                <a class="btn btn-primary" href="@Url.Action("Formulario","Autenticador")">
                    <span class="glyphicon glyphicon-off"></span>
                    Sign in
                </a>
            </p>
        </div>
}

@if(Model != null)
{
    <div class="panel panel-info">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h2 class="panel-title">Contas</h2>
        </div>
        <div class="panel-body">
            <p>Bem vindo <strong>@Model.Nome</strong>, selecione a conta o qual deseja operar: </p>
        </div>

        <!-- Table -->
        <table class="table">
            <thead>
                <tr>
                    <th>Numero</th>
                    <th>Tipo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contas)
                {
                    <tr>
                        <td>
                            <a class="btn btn-primary btn-block" href="@Url.Action("Opcoes", "Transacoes", new { numero = item.Numero })" role="button">
                                @Html.DisplayFor(modelItem => item.Numero)
                            </a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.TipoDeConta)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
