@model IEnumerable<LoginBancoTeste.Models.Investimento>

@{
    ViewBag.Title = "Investimentos";
    Layout = "~/Views/Shared/_TransacoesLayout.cshtml";
}
<div class="panel panel-info">
    <div class="panel-heading">
    <h2 class="panel-title">Investimentos</h2>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Novo investimento", "InvestimentoCriar", new { id = ViewBag.idCliente }, new { @class = "btn btn-default" })
        <br /><br />
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.valor_ini)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.valor_acc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.data_canc)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.valor_ini)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.valor_acc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.data_canc)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
            </table>
    </div>
</div>