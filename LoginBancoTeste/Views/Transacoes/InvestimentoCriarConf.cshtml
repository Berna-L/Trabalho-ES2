@model LoginBancoTeste.Models.Investimento
@{
    ViewBag.Title = "Confirmação investimento";
    Layout = "~/Views/Shared/_TransacoesLayout.cshtml";
}

@using (Html.BeginForm("InvestimentoCriarConf", "Transacoes", FormMethod.Post)) {

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Confirmação de investimento </h3>
        </div>
        <div class="panel-body">
            <p>Deseja realmente investir R$ @Model.valor_ini da conta @ViewBag.idConta: </p>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.tipo_invest)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.tipo_invest.nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.valor_ini)
                </dt>
                <dd>
                    R$ @Html.DisplayFor(model => model.valor_ini)
                </dd>
                <dt>
                    Juros mês:
                </dt>
                <dd>
                    @ViewBag.JurosMes%
                </dd>
                <dt>
                    Simulação um mês:
                </dt>
                <dd>
                    R$ @ViewBag.SimulacaoMes
                </dd>
                <dt>
                    Juros ano:
                </dt>
                <dd>
                    @ViewBag.Jurosano%
                </dd>
                <dt>
                    Simulação um ano:
                </dt>
                <dd>
                    R$ @ViewBag.SimulacaoAno
                </dd>
            </dl>

            <div class="col-sm-offset-2 col-md-2">
                <button type="submit" class="btn btn-success" value="Ok">
                    <span class="glyphicon glyphicon-ok"></span>
                    Ok
                </button>
            </div>

        </div>
    </div>
}

<p>
    <a href="@Url.Action("InvestimentoCriar", "Transacoes", new { idCliente = Model.cliente.Id, idConta = ViewBag.idConta })" class="btn btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span>
        Voltar
    </a>
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}