@model LoginBancoTeste.Models.Conta
@{
    ViewBag.Title = "Saque Customizado";
    Layout = "~/Views/Shared/_TransacoesLayout.cshtml";
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Erro!</strong> @TempData["Erro"]
    </div>
}


@using (Html.BeginForm("SaqueConfirm", "Transacoes", FormMethod.Get, new { numero = Model.Numero }))
{
    @Html.HiddenFor(model => model.Numero)

    <div class="panel panel-info">
        <div class="panel-heading">
            <h2 class="panel-title">Informe o valor</h2>
        </div>
        <div class="panel-body">

            <form class="form-inline">
                <div class="form-group">
                    <label class="sr-only" for="exampleInputAmount">Valor (em reais)</label>
                    <div class="input-group">
                        <div class="input-group-addon">$</div>
                        @Html.TextBox("valor", 0, new { @class = "form-control", @placeholder = "Valor", @id = "exampleInputAmount" })
                        @*<input type="text" class="form-control" id="exampleInputAmount" placeholder="Valor">*@
                        <div class="input-group-addon">,00</div>
                    </div>
                </div>
                <button type="submit" class="btn btn-success" value="Salvar">
                    <span class="glyphicon glyphicon-ok"></span>
                    Ok
                </button>
            </form>

        </div>
    </div>

}

<p>
    <a href="@Url.Action("Saque", "Transacoes", new { numero = Model.Numero })" class="btn btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span>
        Voltar
    </a>
</p>