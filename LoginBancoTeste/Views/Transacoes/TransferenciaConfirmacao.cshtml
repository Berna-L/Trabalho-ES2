@model LoginBancoTeste.Models.ViewModels.TransferenciaViewModel
@{
    ViewBag.Title = "Confirmação Transferencia";
    Layout = "~/Views/Shared/_TransacoesLayout.cshtml";
}

@using (Html.BeginForm("TransferenciaConfirmacao", "Transacoes", FormMethod.Post))
{
    @Html.HiddenFor(model => model.NumeroConta)
    @Html.HiddenFor(model => model.NumeroContaDestino)
    @Html.HiddenFor(model => model.Valor)

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Confirmação de transferencia </h3>
        </div>
        <div class="panel-body">
            <p>Deseja realmente transferir R$ @Model.Valor para: </p>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ContaDestino.Cliente.Nome)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContaDestino.Cliente.Nome)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContaDestino.Numero)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContaDestino.Numero)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ContaDestino.TipoDeConta)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ContaDestino.TipoDeConta)
                </dd>
            </dl>

            <div class="col-sm-offset-2 col-md-2">
                <button type="submit" class="btn btn-success" value="Ok">
                    <span class="glyphicon glyphicon-ok"></span>
                    Ok
                </button>
            </div>

        </div>
    </div>
}

<p>
    <a href="@Url.Action("Transferencia", "Transacoes", new { numero = Model.NumeroConta })" class="btn btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span>
        Voltar
    </a>
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}